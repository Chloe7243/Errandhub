{
  "name": "errandhub",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/backend\" \"npm run start --workspace=apps/frontend\"",
    "backend": "npm run dev --workspace=apps/backend",
    "frontend": "npm run start --workspace=apps/frontend"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
